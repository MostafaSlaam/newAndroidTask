<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader
            android:layout_width="@dimen/padding_10"
            android:layout_height="@dimen/padding_10"
            app:loader_animDur="100"
            app:loader_bigCircleRadius="@dimen/padding_25"
            app:loader_circleRadius="@dimen/padding_5"
            android:layout_centerInParent="true"
            app:loader_defaultColor="@color/columbiablue_3"
            app:loader_firstShadowColor="@color/_00c0ed"
            app:loader_secondShadowColor="@color/dodgerblue_1"
            app:loader_selectedColor="@color/_00c0ed"
            app:loader_showRunningShadow="true" />
    </RelativeLayout>

</layout>